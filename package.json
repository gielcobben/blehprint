{
  "name": "blehprint",
  "private": true,
  "type": "module",
  "workspaces": [
    "workers/*",
    "packages/*"
  ],
  "scripts": {
    "update": "bun update",
    "dev:web": "bun run --cwd workers/web dev",
    "build:web": "bun run --cwd workers/web build",
    "deploy:web": "bun run --cwd workers/web build && bun run --cwd workers/web deploy",
    "deploy:all": "bun run deploy:web && bun run deploy:database",
    "db:generate": "bun run --cwd packages/database db:generate",
    "db:migrate:remote": "bun run --cwd packages/database db:migrate:remote",
    "db:migrate:local": "bun run --cwd packages/database db:migrate:local",
    "db:studio": "bun run --cwd packages/database db:studio",
    "typecheck": "bun run --cwd workers/web typecheck && bun run --cwd packages/database typecheck",
    "cf:typegen": "bun run --cwd workers/web cf:typegen && bun run --cwd packages/database cf:typegen",
    "ui:add": "bunx --cwd packages/ui shadcn@latest add",
    "rename": "bun run scripts/rename.ts"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
