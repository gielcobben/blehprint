{
  "name": "@blehprint/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate:remote": "wrangler d1 migrations apply blehprint-database --remote",
    "db:migrate:local": "wrangler d1 migrations apply --local blehprint-database --persist-to ../../.wrangler/state"
  },
  "dependencies": {
    "drizzle-orm": "^0.36.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251118.0",
    "drizzle-kit": "^0.30.1",
    "wrangler": "^4.47.0"
  }
}
